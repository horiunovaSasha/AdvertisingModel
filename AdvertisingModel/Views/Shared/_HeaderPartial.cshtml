@{
    bool isNotAdmin = !this.User.IsInRole("admin");
}


<header id="header" class="header">
    <div class="top-left">
        <div class="navbar-header">
            <a class="navbar-brand" href="./"><img src="~/images/logo.png" alt="Logo"></a>
            <a class="navbar-brand hidden" href="./"><img src="images/logo2.png" alt="Logo"></a>
            @*<a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>*@
        </div>
    </div>
    <div class="top-right">
        <div class="header-menu">
            <div class="header-left">
                @if (!isNotAdmin)
                {
                <div class="dropdown">
                    <form asp-controller="Home" asp-action="Index">
                        <button class="btn btn-secondary dropdown-toggle" type="submit" style="color:darkgray">Моделі</button>
                    </form>
                </div>

                <div class="dropdown">
                    <form asp-controller="Roles" asp-action="Index">
                        <button class="btn btn-secondary dropdown-toggle" style="color:darkgray">Ролі</button>
                    </form>
                </div>
                <div class="dropdown">
                    <form>
                        <button asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary dropdown-toggle" style="color:darkgray">Створити нового користувача</button>
                    </form>
                </div>

                <div class="dropdown">
                    <form>
                        <a href="/account/logout" class="btn btn-secondary dropdown-toggle" style="color:darkgray">Вийти</a>
                    </form>
                </div>
                }
            </div>
        </div>
    </div>
</header>