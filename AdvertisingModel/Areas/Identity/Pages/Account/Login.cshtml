@page
@model LoginModel

@{
    ViewData["Title"] = "Увійти";
}

<h1>@ViewData["Title"]</h1>
    <section>
        <form id="account" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Електронна пошта</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Пароль</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        Запам'ятати мене?
                        <input asp-for="Input.RememberMe" />
                        @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                    </label>
                    <label class="pull-right">
                        <a id="forgot-password" asp-page="./ForgotPassword">Забули пароль?</a>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </div>
            <div class="form-group">
                <div class="register-link m-t-15 text-center">
                    <p>Не маєте аккаунта?  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Реєстрація</a></p>
                </div>
            </div>
        </form>
    </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
